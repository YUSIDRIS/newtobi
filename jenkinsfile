pipeline {
    agent any
    tools {
        nodejs 'yarn'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }
      
        stage("build app") {
            steps {
                script {
                    echo "building app"
                    sh 'yarn install'
                }
            }
        }
       stage("build image") {
            steps {
                script {
                    echo "building image"
                    gv.buildImage()
                }
            }
        }

    }   
}
